{
    "version": 10,
    "configurePresets": [
        {
            "name": "base",
            "displayName": "Base configuration",
            "description": "Common settings for all builds",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}/",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_CXX_STANDARD": "23",
                "CMAKE_CXX_EXTENSIONS": "OFF"
            },
            "hidden": true
        },
        {
          "name": "sandbox-debug",
          "inherits": "base",
          "displayName": "Sandbox (Debug)",
          "description": "Debug build",
          "cacheVariables": {
            "CMAKE_BUILD_TYPE": "Debug",
            "SANDBOX_ADDITIONAL_FLAGS": "-Wall -Wextra -Wpedantic"
          }
        },
        {
          "name": "sandbox-release",
          "inherits": "base",
          "displayName": "Sandbox (Release)",
          "description": "Optimized build for performance testing",
          "cacheVariables": {
            "CMAKE_BUILD_TYPE": "Release",
            "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "ON"
          }
        },
        {
          "name": "sandbox-asan",
          "inherits": "base",
          "displayName": "Sandbox (ASAN)",
          "description": "Build with sanitizers",
          "cacheVariables": {
            "CMAKE_BUILD_TYPE": "RelWithDebInfo",
            "SANDBOX_ADDITIONAL_FLAGS": "-Wall -Wextra -Wpedantic"
          },
          "environment": {
            "SANDBOX_ENABLE_ASAN": "ON"
          }
        }
    ],
    "buildPresets": [
      {
        "name": "debug",
        "configurePreset": "sandbox-debug"
      },
      {
        "name": "release",
        "configurePreset": "sandbox-release"
      },
      {
        "name": "asan",
        "configurePreset": "sandbox-asan"
      }
    ]
}
